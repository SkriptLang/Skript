test "recipe result":
	set {_result} to copper ingot named "test_recipe_result"
	register a new cooking recipe with the key "test_recipe_result":
		set the input item to raw copper named "test_recipe_result"
		set the result to {_result}
	set {_last} to last registered recipe
	set {_get} to recipe with the key "test_recipe_result"
	assert the recipe result of {_last} = {_result} with "Result mismatch of last registered recipe"
	assert the recipe experience of {_get} = {_result} with "Result mismatch of get recipe"
