test "entity sounds":
	set {_hostile-prefix} to "entity.hostile." if running minecraft "1.21.2" else "ENTITY_HOSTILE_"
	set {_zombie-prefix} to "entity.zombie." if running minecraft "1.21.2" else "ENTITY_ZOMBIE_"
	set {_generic-prefix} to "entity.generic." if running minecraft "1.21.2" else "ENTITY_GENERIC_"
	spawn a zombie at (spawn of world "world"):
		assert damage sound of entity is "%{_zombie-prefix}%HURT" with "damage sound of zombie should return %{_zombie-prefix}%HURT"
		assert death sound of entity is "%{_zombie-prefix}%DEATH" with "death sound of zombie should return %{_zombie-prefix}%DEATH"
		assert swim sound of entity is "%{_hostile-prefix}%SWIM" with "swim sound of zombie should return %{_hostile-prefix}%SWIM"
		assert normal fall damage sound of entity is "%{_hostile-prefix}%SMALL_FALL" with "fall sound of zombie should return %{_hostile-prefix}%SMALL_FALL"
		assert high fall damage sound of entity is "%{_hostile-prefix}%BIG_FALL" with "high fall sound of zombie should return %{_hostile-prefix}%BIG_FALL"
		assert fall damage sound from a height of 10 of entity is "%{_hostile-prefix}%BIG_FALL" with "fall sound from height of 10 sound of zombie should return %{_hostile-prefix}%BIG_FALL"
		assert fall damage sound from a height of {_none} of entity is "%{_hostile-prefix}%SMALL_FALL" with "fall sound from invalid height sound of zombie should return %{_hostile-prefix}%SMALL_FALL"
		assert splash sound of entity is "%{_hostile-prefix}%SPLASH" with "splash sound of zombie should return %{_hostile-prefix}%SPLASH"
		assert speedy splash sound of entity is "%{_generic-prefix}%SPLASH" with "speedy splash sound of zombie should return %{_generic-prefix}%SPLASH"
		assert eating sound of entity is "%{_generic-prefix}%EAT" with "eating sound of zombie should return %{_generic-prefix}%EAT"
		assert eating sound of entity using golden apple is "%{_generic-prefix}%EAT" with "eating sound of zombie using golden apple should return %{_generic-prefix}%EAT"
		assert drinking sound of entity is "%{_generic-prefix}%DRINK" with "drinking sound of zombie should return %{_generic-prefix}%DRINK"
		assert drinking sound of entity using potion is "%{_generic-prefix}%DRINK" with "drinking sound of zombie using potion should return %{_generic-prefix}%DRINK"
		assert ambient sound of entity is "%{_zombie-prefix}%AMBIENT" with "ambient sound of zombie should return %{_zombie-prefix}%AMBIENT"
		delete entity
